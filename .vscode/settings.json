{
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#c77b57",
    "activityBar.background": "#c77b57",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#9fdfb4",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#c77b57",
    "statusBar.background": "#b0613b",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#c77b57",
    "statusBarItem.remoteBackground": "#b0613b",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#b0613b",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#b0613b99",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#b0613b",
  "cSpell.enableFiletypes": ["markdown"],
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  }
}
